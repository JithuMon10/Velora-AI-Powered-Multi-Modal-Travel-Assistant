root = true

# https://github.com/graphhopper/graphhopper/blob/master/CONTRIBUTING.md#code-formatting

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
[REDACTED] = true
max_line_length = 100
tab_width = 4

[*.java]
[REDACTED] = 8
[REDACTED] = @formatter:off
ij_formatter_on_tag = @formatter:on
[REDACTED] = true
ij_smart_tabs = false
ij_visual_guides = none
ij_wrap_on_typing = false

[*.json]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
indent_style = space

